{
    "app-id": "org.delugetorrent.Deluge",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.32",
    "branch": "stable",
    "sdk": "org.gnome.Sdk",
    "command": "/app/bin/deluge",
    "tags": [],
    "rename-desktop-file": "deluge.desktop",
    "rename-icon": "deluge",
    "rename-appdata-file": "deluge.appdata.xml",
    "copy-icon": true,
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--share=network",
        "--own-name=org.deluge_torrent.Deluge",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--talk-name=org.freedesktop.FileManager1",
        "--filesystem=home",
        "--filesystem=~/.config/dconf:ro",
        "--filesystem=xdg-run/dconf",
        "--env=PYTHONPATH=/app/lib/python2.7/site-packages"
    ],
    "cleanup": [
        "/cache",
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/aclocal",
        "/share/devhelp",
        "/share/gir-1.0",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "/lib/systemd",
        "*.la",
        "*.a",
        "/lib/python2.7/site-packages/pygame/docs",
        "/lib/python2.7/site-packages/pygame/tests",
        "/lib/python2.7/site-packages/pygame/examples",
        "/lib/python2.7/site-packages/twisted/tests",
        "/lib/python2.7/site-packages/twisted/test",
        "/lib/python2.7/site-packages/pip",
        "/lib/python2.7/site-packages/setuptools",
        "/lib/python2.7/site-packages/docutils"
    ],
    "modules": [
        "shared-modules/python2.7/python-2.7.json",
        "modules/boost.json",
        "modules/libtorrent-rasterbar.json",
        "shared-modules/libappindicator/libappindicator-gtk3-12.10.json",
        "modules/pygame-2.7/pygame-1.9.4.json",
        "modules/zlib.json",
        "modules/libjpeg.json",
        "modules/libpng.json",
        "modules/geoip.json",
        "org.delugetorrent.Deluge.pipdeps.json",
        {
            "name": "deluge",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/lib/python2.7/site-packages",
                "./setup.py build ",
                "./setup.py install --prefix=${FLATPAK_DEST}",
                "./setup.py install_data"
            ],
            "build-options": {
                "env": {
                    "PYTHONPATH": "/app/lib/python2.7/site-packages/"
                }
            },
            "sources": [
                {
                    "type": "git",
                    "url": "git://deluge-torrent.org/deluge.git",
                    "branch": "deluge-2.0.3"
                },
                {
                    "type": "patch",
                    "path": "patches/pref.patch"
                }
            ]
        },
        {
            "name": "maxmind",
            "buildsystem": "simple",      
            "build-commands": [
              "gunzip maxmind.dat.gz",
              "install -Dm644 maxmind.dat /app/lib/GeoIP/GeoIP.dat"
            ],
            "sources": [
              {
                  "type": "file",
                  "url": "https://dl.miyuru.lk/geoip/maxmind/country/maxmind.dat.gz",
                  "sha256": "6e787f58ba5b0573a3c3ab3ee4e4ad3d2003f9522ef19744cb65c8382a3e8404"
              } 
           ]   
        }
    ]
}
